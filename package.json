  },
  "author": "Lukas Siemon",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.18.10",
    "@babel/eslint-parser": "7.18.9",
    "@babel/register": "7.18.9",
    "@blackflux/eslint-plugin-rules": "2.1.0",
    "@blackflux/robo-config-plugin": "9.0.9",
    "c8": "7.11.0",
    "chai": "4.3.7",
    "eslint": "8.46.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.28.0",
    "eslint-plugin-json": "3.1.0",
    "eslint-plugin-markdown": "3.0.1",
    "eslint-plugin-mocha": "10.1.0",
    "js-gardener": "5.0.0",
    "node-tdd": "3.5.2"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/blackflux/lambda-cfn-hook/blob/master/LICENSE"
    }
  ],
  "keywords": [
    "cloudformation",
    "cfn",
    "aws lambda",
    "hook",
    "custom resource",
    "callback",
    "post-deploy"
  ],
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">= 12"
  },
  "description": "Lambda function wrapper for cfn custom resource hook",
  "scripts": {
    "clean": "rm -rf lib",
    "build": "cp -rf ./src ./lib",
    "build-clean": "yarn run clean && yarn run build",
    "test-simple": "c8 mocha --experimental-loader=./test/hot.js \"./test/**/*.spec.js\"",
    "test": "yarn run clean && yarn run gardener && yarn run test-simple",
    "docker": "docker run --net host -u`id -u`:`id -g` -v $(pwd):/user/project -v ~/.aws:/user/.aws -v ~/.npmrc:/user/.npmrc -w /user/project -it --entrypoint /bin/bash",
    "u": "yarn upgrade --latest --force",
    "i": "yarn install --frozen-lockfile",
    "t": "yarn test",
    "ts": "yarn run test-simple",
    "tsv": "yarn run test-simple --verbose",
    "semantic-release": "yarn run build-clean && npx semantic-release",
    "gardener": "node gardener.js",
    "it": "yarn run i && yarn run t"
  },
  "homepage": "https://github.com/blackflux/lambda-cfn-hook#readme",
  "bugs": {
    "url": "https://github.com/blackflux/lambda-cfn-hook/issues"
  },
  "dependencies": {
    "@blackflux/axios": "1.1.3",
    "joi-strict": "2.0.1",
    "lambda-async": "2.0.1",
    "lambda-monitor-logger": "4.0.0",
    "lodash.get": "4.4.2"
  },
  "resolutions": {
    "strip-ansi": "^6.0.0",
    "string-width": "^4.0.0",
    "wrap-ansi": "^v7.0.0"
  }
}
